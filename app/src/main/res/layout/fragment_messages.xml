<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.messages.MessagesFragment">

    <EditText
        android:id="@+id/add_contact_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/hint_start_chat_room"
        android:inputType="text"
        android:textSize="15sp"
        android:drawableStart="@drawable/ic_search_grey_24dp"
        android:layout_margin="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/chat_room_start_button"
        app:layout_constraintLeft_toLeftOf="parent">
    </EditText>

    <Button
        android:id="@+id/chat_room_start_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="@string/action_start_chat_room"
        android:background="@color/primaryDarkColor"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/add_contact_text">
    </Button>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list_root"
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:layout_margin="5dp"
        android:orientation="vertical"
        app:layoutManager="LinearLayoutManager"
        app:layout_constraintTop_toBottomOf="@id/chat_room_start_button"
        tools:context="edu.uw.tcss450.group1project.ui.messages.MessagesFragment"
        tools:listitem="@layout/fragment_messages_card" />

</androidx.constraintlayout.widget.ConstraintLayout>