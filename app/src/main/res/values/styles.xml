<resources>

    <!-- Base application theme. -->
    <style name="AppTheme1" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:fontFamily">@font/font_balsamiq_sans</item>
        <item name="android:windowBackground">@drawable/light_gradient</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="actionMenuTextColor">@color/black</item>
        <item name="titleTextColor">@color/white</item>
        <item name="newCodeTextColor">@color/black</item>
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="editTextStyle">@style/EditTextStyleTheme1</item>
        <item name="cardViewStyle">@style/CardStyleTheme1</item>
        <item name="buttonStyle">@style/ButtonStyleTheme1</item>
        <item name="buttonRegisterColor">@color/black</item>
        <item name="cardTextColor">@color/black</item>
        <item name="cardImageColor">@color/black</item>
        <item name="buttonTextColor">@color/black</item>
        <item name="bottomNavigationStyle">@style/BottomNavStyleTheme1</item>
    </style>

    <style name="CardStyleTheme1" parent="CardView">
        <item name="cardCornerRadius">5dp</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardElevation">0dp</item>
    </style>

    <style name="BottomNavStyleTheme1" parent="Widget.Design.BottomNavigationView">
        <item name="itemIconTint">@color/black</item>
        <item name="itemTextColor">@color/black</item>
    </style>

    <style name="EditTextStyleTheme1" parent="Widget.AppCompat.EditText">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:drawableTint">@color/white</item>
    </style>

    <style name="TextViewStyleTheme1" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ButtonStyleTheme1" parent="Widget.AppCompat.Button">
        <item name="backgroundTint">#9e4e6e</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:radius">5dp</item>
        <item name="android:drawableTint">@color/white</item>
    </style>

</resources>
