<resources>

    <!-- Base application theme. -->
    <style name="AppTheme1" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:actionBarStyle">@android:color/transparent</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:fontFamily">@font/font_balsamiq_sans</item>
        <!-- Customize your theme here. -->
        <!--
        <item name="colorPrimary">@color/primaryColor</item> -->
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorAccent">@color/secondaryDarkColor</item>
        <item name="bottomNavigationStyle">@style/BottomNavStyleTheme1</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="cardViewStyle">@style/CardStyleTheme1</item>
        <item name="android:windowBackground">@drawable/light_gradient</item>
        <item name="cardTextColor">@color/white</item>

    </style>

    <style name="CardStyleTheme1" parent="CardView">
        <item name="cardCornerRadius">5dp</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardElevation">0dp</item>
    </style>

    <style name="BottomNavStyleTheme1" parent="Widget.Design.BottomNavigationView">
        <item name="itemIconTint">@color/black</item>
        <item name="itemTextColor">@color/black</item>
    </style>

    <style name="BottomNavStyleThemeTest" parent="BottomNavStyleTheme1">
        <item name="itemIconTint">@color/white</item>
        <item name="itemTextColor">@color/white</item>
    </style>




</resources>
