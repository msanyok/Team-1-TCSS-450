<resources>

    <!-- Base application theme. -->
    <style name="AppTheme1" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:fontFamily">@font/font_balsamiq_sans</item>
        <item name="android:windowBackground">@color/slate_blue</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textViewStyle">@style/TextViewStyleTheme1</item>
        <item name="android:switchStyle">@style/SwitchStyleTheme1</item>
        <item name="android:itemBackground">@color/white</item>
        <item name="popupMenuBackground">@drawable/toolbar_dropdown</item>
        <item name="colorAccent">@color/berry</item>
        <item name="title_icon">@drawable/logo_theme_1</item>
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="editTextStyle">@style/EditTextStyleTheme1</item>
        <item name="cardViewStyle">@style/CardStyleTheme1</item>
        <item name="buttonTextColor">@color/white</item>
        <item name="cardColor">@color/white</item>
        <item name="cardTextColor">@color/black</item>
        <item name="cardImageColor">@color/black</item>
        <item name="tabDeselectedColor">@color/white_transparent</item>
        <item name="bottomNavigationStyle">@style/BottomNavStyleTheme1</item>
    </style>

    <style name="CardStyleTheme1" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">5dp</item>
        <item name="cardBackgroundColor">?cardColor</item>
        <item name="cardElevation">0dp</item>
    </style>

    <style name="BottomNavStyleTheme1" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconTint">@color/white</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="itemTextColor">@color/white</item>
    </style>

    <style name="EditTextStyleTheme1" parent="Widget.AppCompat.EditText">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:drawableTint">@color/white</item>
        <item name="android:textCursorDrawable">@drawable/text_cursor_white</item>
    </style>

    <style name="TextViewStyleTheme1" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SwitchStyleTheme1">
        <item name="colorControlActivated">@color/white</item>
        <item name="android:colorForeground">@android:color/transparent</item>
        <item name="colorSwitchThumbNormal">@color/white</item>
    </style>

    <style name="AppTheme2" parent="Theme.MaterialComponents.Light">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:fontFamily">@font/font_balsamiq_sans</item>
        <item name="android:windowBackground">@color/cream</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textViewStyle">@style/TextViewStyleTheme2</item>
        <item name="android:switchStyle">@style/SwitchStyleTheme2</item>
        <item name="android:itemBackground">@color/rose</item>
        <item name="popupMenuBackground">@drawable/toolbar_dropdown</item>
        <item name="colorSurface">@color/rose</item>
        <item name="colorAccent">@color/midnight</item>
        <item name="title_icon">@drawable/logo_theme_2</item>
        <item name="titleTextColor">@color/black</item>
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="editTextStyle">@style/EditTextStyleTheme2</item>
        <item name="cardViewStyle">@style/CardStyleTheme1</item>
        <item name="buttonTextColor">@color/white</item>
        <item name="cardColor">@color/rose</item>
        <item name="cardTextColor">@color/white</item>
        <item name="cardImageColor">@color/white</item>
        <item name="tabDeselectedColor">@color/black_transparent</item>
        <item name="bottomNavigationStyle">@style/BottomNavStyleTheme2</item>
    </style>\

    <style name="BottomNavStyleTheme2" parent="BottomNavStyleTheme1">
        <item name="itemIconTint">@color/black</item>
        <item name="itemTextColor">@color/black</item>
    </style>

    <style name="EditTextStyleTheme2" parent="EditTextStyleTheme1">
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:drawableTint">@color/black</item>
        <item name="android:textCursorDrawable">@drawable/text_cursor_black</item>
    </style>

    <style name="TextViewStyleTheme2" parent="TextViewStyleTheme1">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SwitchStyleTheme2" parent="SwitchStyleTheme1">
        <item name="colorControlActivated">@color/rose</item>
        <item name="colorSwitchThumbNormal">@color/rose</item>
    </style>

    <style name="AppTheme3" parent="AppTheme1">
        <item name="android:windowBackground">@color/purple</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:itemBackground">@color/gold</item>
        <item name="android:textViewStyle">@style/TextViewStyleTheme3</item>
        <item name="android:switchStyle">@style/SwitchStyleTheme3</item>
        <item name="popupMenuBackground">@drawable/toolbar_dropdown</item>
        <item name="colorAccent">@color/gray</item>
        <item name="title_icon">@drawable/logo_theme_3</item>
        <item name="editTextStyle">@style/EditTextStyleTheme1</item>
        <item name="cardViewStyle">@style/CardStyleTheme1</item>
        <item name="cardColor">@color/gold</item>
        <item name="buttonTextColor">@color/black</item>
        <item name="bottomNavigationStyle">@style/BottomNavStyleTheme1</item>
    </style>

    <style name="TextViewStyleTheme3" parent="TextViewStyleTheme1">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SwitchStyleTheme3" parent="SwitchStyleTheme1">
        <item name="colorControlActivated">@color/gold</item>
        <item name="colorSwitchThumbNormal">@color/gold</item>
    </style>

    <style name="AppThemePlain" parent="AppTheme1">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="Widget.App.Button.OutlinedButton.IconOnly"
        parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="FabShape">
        <item name="cornerFamily">rounded</item>
    </style>
</resources>
